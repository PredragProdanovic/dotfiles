# Git aliases
alias gp='git push -u'
alias gs='git status'
alias gsb='git fetch && git rebase -i origin/develop'
alias gmod='git merge origin/develop'
# The following Git aliases point to scripts in {dotfiles}/home/bin
alias gac='git-ac'
alias gacp='git-acp'
alias gbc='git-bc'
alias gbpurge='git-bpurge'
alias ghc='git-hc'
alias ghpr='git-hpr'
alias gmove='git-move'
alias gwtf='git-wtf'

# Copy contents of file to clipboard
alias cb='cat "$1" | pbcopy' 

# Open additional calculators
alias calc='/Applications/Calculator.app/Contents/MacOS/Calculator &' 

# Lame settings for podcast quality output
alias lame-podcast='lame -V6 --vbr-new --resample 22 -m m'

# Pipe my public key to my clipboard.
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to clipboard.'"